<%= form_for :promotion, url: url, method: http_verb, :html => {:multipart => true} do |f| %>
    <h3>Describe the Promotion</h3>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :promo_type %>
    <%= f.text_field :promo_type %>
    <%= f.label :details %>
    <%= f.text_area :details %>
    <%= f.label :cuisine %><br>
    <%= select('promotion', 'cuisine_id', Cuisine.all.collect {|c| [c.cuisine, c.id]} ) %>

    <p>
    <h3>Upload Image for the promotion</h3>
    <%= f.file_field :image %>
    </p>

    <h3>Enter the Dates the Promotion will run for</h3>
    <p>
          <%= f.label :starts %>
          <%= f.date_select :starts %><br>

      <%= f.label :ends %>
      <%= f.date_select :ends %>
    </p>

    <p>
    <h3> Days and Times </h3>
    <%= f.label :mon %> <%= f.check_box :mon %>
    <%= f.label :tue %> <%= f.check_box :tue %>
    <%= f.label :wed %> <%= f.check_box :wed %>
    <%= f.label :thu %> <%= f.check_box :thu %>
    <%= f.label :fri %> <%= f.check_box :fri %>
    <%= f.label :sat %> <%= f.check_box :sat %>
    <%= f.label :sun %> <%= f.check_box :sun %>
    <br>
    <p>
      <%= f.label :from %>
      <%= f.time_select :from, :minute_step => 15 %>
      <%= f.label :to %>
      <%= f.time_select :to, :minute_step => 15 %>
    </p>
    <h3>Activate Promotion</h3>
    <p>
      <%= f.label :active %>
      <%= f.check_box :active %>
    </p>
    <p>
       <%= f.submit %>
    </p>
<% end %>
