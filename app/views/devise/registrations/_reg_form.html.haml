= bootstrap_form_for :user, url: url, method: http_verb, html: {multipart: true, role: 'role'} do |f|
  = f.text_field :name
  = f.text_field :email
  -# TODO remove role from registration, this will default to client
  -# TODO had been left in for development
  -# TODO only allow for Admins to view on edit?????
  = f.select :role, User::ROLES , {include_blank: true}
  = f.password_field :password
    - if @minimum_password_length
    %em
      = @minimum_password_length
      (characters minimum)
  = f.password_field :password_confirmation
  = f.submit 'Sign Up', {class: 'btn btn-success'}
