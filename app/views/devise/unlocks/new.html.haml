.container
  .row
    .col-md-offset-4.col-md-4
      %h2 Get unlock instructions
      .well.well-lg
        = bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
          = f.email_field :email, autofocus: true, placeholder: 'Enter your email here...'
          = f.submit "Resend unlock instructions", {class: 'btn btn-success'}
      = render "devise/shared/links"
    .col-md-4
      = render 'shared/form_error', model: @user