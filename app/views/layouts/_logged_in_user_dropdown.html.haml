%li.dropdown
  %a.btn-mini.dropdown-toggle(data-toggle="dropdown" href='#')
    = current_user.email
    %span.caret
  %ul.dropdown-menu(role='menu')
    %li
      = link_to 'Personal Details', current_user
    - if current_user.client_id
      %li
        = link_to 'Business Details', client_path(current_user.client_id)
    %li Promotions
    %li Dashboard
    %li.divider(role='separator')
    %li
      = link_to "Log Out", destroy_user_session_path, method: :delete
