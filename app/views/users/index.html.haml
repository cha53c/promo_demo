.container
  %h1
    Users
  .row
    %h2
      Status Overview
  .row
    .col-md-3
      %h3
        Total:
        = @users.length
    .col-md-3
      %h3
        Unconfirmed:
        = User.unconfirmed.length
        -# TODO write helper to show number of unconfirmed
    .col-md-3
      %h3
        Never signed in:
        = User.nosignin.length
    .col-md-3
      %h3
        Locked:
        = User.locked.length
  .row
    -# TODO decide how admins should add users - invitation or manually?
      = link_to "Add User", new_user_path, {method: :get, class: 'btn btn-success'}
    .table-responsive
      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th Email
            %th Role
            %th Client Id
            %th Login Count
            %th Last Login
            %th Action
        %tbody
          - @users.each do |user|
            %tr
              %td
                = user.name
              %td
                = user.email
              %td
                = user.role
              %td
                = user.client_id
              %td
                = user.sign_in_count
              %td
                = user.last_sign_in_at
              %td
                = link_to 'Show', user

