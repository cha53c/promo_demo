.container
  %h1 User#Show
  .row
    = link_to 'Back to Users', users_path, {class: "btn btn-default"}
    = link_to 'Edit', edit_user_path, {class: "btn btn-primary"}
    - if policy(User).destroy?
      = link_to 'Delete', user_path, {method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this user?"}}
  .row
    %p
      Email:
      = @user.email
    %p
      Role:
      = @user.role
    %p
      Date Created:
      = @user.created_at

