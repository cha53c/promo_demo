<h1>Clients#show</h1>
<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<h2>Add a promotion:</h2>
<%= form_for([@client, @client.promotions.build]) do |f| %>
      <p>
      <%= f.label :type %><br>
      <%= f.text_field :type %>
    </p>
      <p>
      <%= f.label :start %><br>
      <%= f.text_area :start %>
    </p>
    <p>
      <%= f.label :end %><br>
      <%= f.text_area :end %>
    </p>
      <p>
      <%= f.submit %>
    </p>
<% end %>


<%= link_to 'Back', clients_path %>
<%= link_to 'Edit', edit_client_path(@client) %>
