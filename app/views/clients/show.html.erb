<h1>Clients#show</h1>
<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<h2>Promotions</h2>
<% @client.promotions.each do |promotion| %>
    <p>
      <strong>Promotion Type</strong>
      <%= promotion.promo_type %>
    </p>
    <p>
      <strong>Starts</strong>
      <%= promotion.start_date %>
    </p>
    <p>
      <strong>Ends</strong>
      <%= promotion.end_date %>
    </p>

<% end %>

<h2>Add a promotion:</h2>
<%= form_for([@client, @client.promotions.build]) do |f| %>

      <p>
      <%= f.label :promo_type %><br>
      <%= f.text_field :promo_type %>
    </p>
      <p>
      <%= f.label :start_date %><br>
      <%= f.text_area :start_date %>
    </p>
    <p>
      <%= f.label :end_date %><br>
      <%= f.text_area :end_date  %>
    </p>
      <p>
      <%= f.submit %>
    </p>
<% end %>


<%= link_to 'Back', clients_path %>
<%= link_to 'Edit', edit_client_path(@client) %>
