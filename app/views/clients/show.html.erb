<h1>Clients#show</h1>
<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<h2>Promotions</h2>
<table border="'1" style="width:300px">
<tr>
  <th><strong>Promotion Type</strong></th>
  <th> <strong>Starts</strong></th>
  <th><strong>Ends</strong></th>

</tr>
  <% @client.promotions.each do |promotion| %>
      <tr>
          <td>
            <%= promotion.promo_type %>
          </td>
          <td>
            <%= promotion.start_date %>
          </td>
          <td>
            <%= promotion.end_date %>
          </td>
          <td><%= link_to 'Edit',  [promotion.client, promotion] %></td>
          <td><%= link_to 'Delete', [promotion.client, promotion],
                            method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>

</table>


<h2>Add a promotion:</h2>
<%= form_for([@client, @client.promotions.build]) do |f| %>

      <p>
      <%= f.label :promo_type %><br>
      <%= f.text_field :promo_type %>
    </p>
      <p>
      <%= f.label :start_date %><br>
      <%= f.text_area :start_date %>
    </p>
    <p>
      <%= f.label :end_date %><br>
      <%= f.text_area :end_date  %>
    </p>
      <p>
      <%= f.submit %>
    </p>
<% end %>


<%= link_to 'Back', clients_path %>
<%= link_to 'Edit', edit_client_path(@client) %>
